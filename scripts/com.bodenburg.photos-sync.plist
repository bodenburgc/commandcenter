<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.bodenburg.photos-sync</string>

    <key>ProgramArguments</key>
    <array>
        <string>/Users/cbodenburg/Sites/magicmirror-office/dashboard/scripts/sync-photos.sh</string>
    </array>

    <key>StartInterval</key>
    <integer>3600</integer>
    <!-- Run every hour (3600 seconds) -->

    <key>RunAtLoad</key>
    <true/>
    <!-- Run immediately when loaded -->

    <key>StandardOutPath</key>
    <string>/tmp/photos-sync-stdout.log</string>

    <key>StandardErrorPath</key>
    <string>/tmp/photos-sync-stderr.log</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/opt/homebrew/bin:/usr/local/bin:/usr/bin:/bin</string>
    </dict>
</dict>
</plist>
